
@model SearchRestaurantViewModel
@using ReflectionIT.Mvc.Paging
@addTagHelper *, ReflectionIT.Mvc.Paging

@{
    ViewData["Title"] = "Restaurants";
}

@if (User.IsInRole("Manager"))
{
    <h1>My Restaurants</h1>
}
else
{
    <h1>Available Restaurants</h1>
    <form asp-controller="Home" asp-action="Index" method="get">
        <select asp-for="SearchRestaurantRequest.City">
            <option selected>Choose a city</option>
            @foreach (var cities in Model.UniqueCities)
            {
                <option value="@cities">@cities</option>
            }
        </select>
        <label asp-for="SearchRestaurantRequest.MealName">Food name:</label>
        <input type="text" asp-for="SearchRestaurantRequest.MealName" class="form-control" />
        <span asp-validation-for="SearchRestaurantRequest.MealName" class="text-primary"></span>
        <button type="submit" class="btn btn-success">Filter</button>
        <a asp-action="Index">Clear filters</a>
    </form>
}

<table class="table">
    <thead class="thead-light">
        <tr>
            <th scope="col">Name</th>
            <th scope="col">FoodType</th>
            <th scope="col">Price Range</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var restaurants in Model.PagingList)
        {
            <tr>
                <th scope="row">
                    @Html.DisplayFor(modelRestaurant => restaurants.Name)
                </th>
                <td>
                    @Html.DisplayFor(modelItem => restaurants.FoodType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => restaurants.PriceCategory)
                </td>
                @if (User.IsInRole("Manager"))
                {
                    <td>
                        <a asp-controller="Restaurant" asp-action="Edit" asp-route-id="@restaurants.RestaurantId" class="btn btn-warning" role="button">Edit</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
<nav aria-label="Restaurants" class="nav">
    <vc:pager paging-list="@Model.PagingList" />
</nav>
