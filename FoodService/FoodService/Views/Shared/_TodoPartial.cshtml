@model TodoRequest

    <form asp-controller="Todo" asp-action="@ViewData["Action"]" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Description" class="font-weight-bold"></label><br />
            <textarea asp-for="Description" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Owner" class="font-weight-bold"></label><br />
            <input asp-for="Owner">
            <span asp-validation-for="Owner" class="text-danger"></span>
        </div>

        <div class="form-group">
            <div class="checkbox">
                <label asp-for="IsDone">
                    <input asp-for="IsDone" />
                    @Html.DisplayNameFor(i => i.IsDone)
                </label>
            </div>
        </div>

        <button type="submit" class="btn btn-success">Save</button>
    </form>
<br />
<form asp-controller="Todo" asp-action="Index" method="get">
    <button type="submit" class="btn btn-info">Cancel</button>
</form>
