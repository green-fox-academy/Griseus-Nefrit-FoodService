@model RestaurantRequest

<form asp-controller="Restaurant" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name">Name of the restaurant</label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description of the restaurant</label>
        <input type="text" asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="City">City</label>
        <input type="text" asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FoodType">Food type</label>
        <input type="text" asp-for="FoodType" class="form-control" />
        <span asp-validation-for="FoodType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PriceCategory">Price range</label>
        <input type="text" asp-for="PriceCategory" class="form-control" />
        <span asp-validation-for="PriceCategory" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add restaurant</button>
</form>
