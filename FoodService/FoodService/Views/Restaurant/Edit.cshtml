@{
    ViewData["Title"] = "Edit Restaurant";
}
@model EditRestaurantViewModel

<h3>Add a new meal here: </h3>
<form asp-controller="Meal" asp-action="Add" method="post" >
    <div class="form-group">
        <label asp-for="@Model.AddMealRequest.Name"></label>
        <input asp-for="@Model.AddMealRequest.Name">
    </div>
    
    <div class="form-group">
        <label asp-for="AddMealRequest.Description"></label>
        <input asp-for="AddMealRequest.Description">
    </div>
    
    <div class="form-group">
        <label asp-for="AddMealRequest.Price.Amount">Price</label>
        <input asp-for="AddMealRequest.Price.Amount">
    </div>
    
    <div class="form-group">
        <label asp-for="AddMealRequest.Price.Currency"></label>
        <input asp-for="AddMealRequest.Price.Currency">
    </div>

    <div>
        <input type="hidden" asp-for="AddMealRequest.RestaurantId" value="@Model.Restaurant.RestaurantId">
    </div>
    
    <button type="submit" class="btn btn-success">Add meal</button>
</form>
<br />
<h3>List of your current meals</h3>
<table class="table">
    <thead class="thead-dark">
    <tr>
        <th>ID</th>
        <th>NAME</th>
        <th>DESCRIPTION</th>
        <th>PRICE</th>
        <th>EDIT</th>
        <th>DELETE</th>
    </tr>
    </thead>
    @foreach (var meal in Model.Restaurant.Meals)
        {
            <tr>
            <td>@meal.MealId</td>
            <td>@meal.Name</td>
            <td>@meal.Description</td>
            <td>@meal.Price.Amount @meal.Price.Currency</td>
            <td>
                <form asp-controller="Meal" asp-action="Edit" method="get" asp-route-Id="@meal.MealId">
                    <button type="submit" class="btn btn-success">Edit</button>
                </form>
            </td>
        <td>
            <form asp-controller="Meal" asp-action="Delete" method="post" asp-route-Id="@meal.MealId">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </td>
    </tr>
        }
    
</table>