@model EditRestaurantViewModel

<h3>Add a new meal here: </h3>
<form asp-controller="Restaurant" asp-action="AddMeal" method="post" >
    <div class="form-group">
        <label asp-for="AddMealRequest.Name"></label>
        <input asp-for="AddMealRequest.Name">
    </div>
    
    <div class="form-group">
        <label asp-for="AddMealRequest.Description"></label>
        <input asp-for="AddMealRequest.Description">
    </div>
    
    <div class="form-group">
        <label asp-for="AddMealRequest.Amount">Price</label>
        <input asp-for="AddMealRequest.Amount">
    </div>
    <button type="submit" class="btn btn-success">Add meal</button>
</form>

<br />
<h3>List of your current meals</h3>
<table class="table">
    <thead class="thead-dark">
    <tr>
        <th>ID</th>
        <th>NAME</th>
        <th>DESCRIPTION</th>
        <th>PRICE</th>
        <th>EDIT</th>
        <th>DELETE</th>
    </tr>
    </thead>
    @foreach (var meal in Model.Restaurant.Meals)
        {
            <tr>
            <td>@meal.MealId</td>
            <td>@meal.Name</td>
            <td>@meal.Description</td>
            <td>@meal.MealPrice.Amount @meal.MealPrice.Currency</td>
            <td>
                <form>
                    <button type="submit" class="btn btn-success">Edit</button>
                </form>
            </td>
        <td>
            <form action="partner/restaurants/edit/@Model.Restaurant.RestaurantId/delete?id=@meal.MealId" method="post">
                <button type="submit" class="btn btn-success">Delete</button>
            </form>
        </td>
    </tr>
        }
    
</table>